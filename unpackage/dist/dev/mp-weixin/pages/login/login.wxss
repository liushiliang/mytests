.user-info-btn {
  border-radius: 300rpx;
  font-size: 26rpx;
  width: 580rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #1e95ee;
  color: #fff;
  letter-spacing: 2rpx;
}
.header {
  margin: 90rpx 0 90rpx 50rpx;
  border-bottom: 1px solid #ccc;
  text-align: center;
  width: 650rpx;
  height: 300rpx;
  line-height: 450rpx;
}
.header image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 100rpx;
}
.content {
  margin-left: 50rpx;
  margin-bottom: 90rpx;
  font-size: 26rpx;
}
.content text {
  display: block;
  color: #9d9d9d;
  font-size: 24rpx;
  margin-top: 40rpx;
}
.bottom {
  border-radius: 80rpx;
  margin: 70rpx 50rpx;
  font-size: 35rpx;
}
.authorize {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
  background-color: rgba(0, 0, 0, 0.5);
}
.authorize .text_center {
  width: 560rpx;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  background-color: #fff;
  position: absolute;
  z-index: 12;
  text-align: center;
  padding-bottom: 40rpx;
  opacity: 0;
  -webkit-transition: opacity 200ms ease-out;
  transition: opacity 200ms ease-out;
}
.authorize .text_center .top {
  padding: 20rpx 40rpx;
}
.authorize .text_center .top .title {
  padding: 20rpx 0;
  font-size: 32rpx;
  font-weight: bold;
}
.authorize .text_center .top .tip {
  padding: 30rpx 0;
  font-size: 30rpx;
  height: 150rpx;
}
.authorize .text_center .bottomBox {
  bottom: 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 100%;
  border-radius: 0;
  padding: 0;
  text-align: center;
}
.authorize .text_center .bottomBox .btn {
  width: 36%;
  height: 80rpx;
  line-height: 80rpx;
}
.authorize .text_center .btn:after {
  border: none;
}
.authorize .text_center .btn:first-child {
  background-color: #262626;
  color: #fff;
}
.authorize .text_center .btn:last-child {
  background-color: #1e95ee;
  color: #fff;
}
.authorize .text-show {
  opacity: 1;
}

