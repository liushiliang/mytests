._selfpage {
  position: absolute;
  width: 100%;
  height: 100%;
}
.whole-page-wrapper {
  position: relative;
  width: 100%;
  left: 0;
}
.whole-page {
  box-shadow: 0px 0px 20rpx #e2e2e2;
  padding-bottom: 42rpx;
}
.container {
  width: 692rpx;
  margin: 0 auto;
}
.fjf-h {
  padding-top: 27rpx;
  height: 37rpx;
  padding-bottom: 27rpx;
  line-height: 37rpx;
  font-size: 31rpx;
  color: #1e95ee;
}
.fjf-h .fjf-h-bar {
  width: 5rpx;
  height: 37rpx;
  display: inline-block;
  margin-left: 5rpx;
  margin-right: 13rpx;
  background-color: #ee202e;
}
.ipt-text {
  display: block;
  width: 618rpx;
  padding: 50rpx 37rpx 12rpx 37rpx;
  font-size: 28rpx;
  line-height: 36rpx;
  color: #333;
  min-height: 200rpx;
  background-color: #f9f9f9;
}
