  margin-right: 28rpx;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  margin-bottom: 30rpx;
}
.btn-list .attachment-btn .addition {
  width: 29rpx;
  height: 29rpx;
  margin-top: 20rpx;
}
.btn-list .attachment-btn .ab-label {
  margin-top: 30rpx;
  color: #bfbfbf;
  font-size: 20rpx;
  line-height: 20rpx;
}
.btn-list .uploaded-img-wrapper {
  width: 125rpx;
  height: 125rpx;
  position: relative;
  margin-right: 28rpx;
  margin-bottom: 30rpx;
}
.btn-list .uploaded-img {
  width: 125rpx;
  height: 125rpx;
  object-fit: cover;
  border-radius: 12rpx;
  display: block;
  box-shadow: 0rpx 0rpx 20rpx 5rpx #ddd;
}
.btn-list .del-btn {
  background-color: #666;
  width: 34rpx;
  height: 34rpx;
  top: -17rpx;
  right: -17rpx;
  border-radius: 10rpx;
  box-shadow: 0rpx 0rpx 10rpx #555;
  color: #fff;
  position: absolute;
}
.btn-wrapper {
  margin-top: 96rpx;
}
.btn-wrapper .submit-btn {
  color: #fff;
  border-radius: 43.5rpx;
  width: 692rpx;
  height: 87rpx;
  line-height: 87rpx;
  background-color: #1e95ee;
  font-size: 29rpx;
  text-align: center;
  letter-spacing: 6rpx;
}
.hideDelBtn {
  color: #fff;
  font-size: 22rpx;
  line-height: 34rpx;
  height: 34rpx;
  width: 100rpx;
  border-radius: 8rpx;
  background-color: #1e95ee;
  box-shadow: 0px 0px 20rpx 10rpx #ddd;
  margin-left: 20rpx;
  -webkit-align-self: center;
          align-self: center;
  text-align: center;
